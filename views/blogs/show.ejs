<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/header %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container blog blog-show">
   <% include ./partials/pheader %>

   <div class="buttons">
    <a class="btn btn-default" href="/blogs">List</a>
    <a class="btn btn-default" href="/blogs/<%= blog._id %>/edit">Edit</a>
    <form action="/blogs/<%= blog._id %>?_method=delete" method="post">
     <a class="btn btn-default" href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
    </form>
   </div>

   <div class="contentBox">
    <h3 class="contentBoxTop"><%= blog.title %></h3>
    <div class="row">
     <div class="col-sm-4 col-sm-push-8">
      <div class="blog-info">
       <div><span>Created</span> : <%= blog.createdAt %></div>
       <% if(blog.updatedAt) { %>
        <div><span>Updated</span> : <%= blog.updatedAt %></div>
       <% } %>
      </div> <!-- blog-info end -->
     </div> <!-- col end-->
     <div class="col-sm-8 col-sm-pull-4">
      <div class="blog-body"><%= blog.body %></div>
     </div> <!-- col end-->

     <div class="col-sm-8 col-sm-pull-4">
      <div class="blog-image"><img src = <%= blog.image %> ></div>
     </div> <!-- col end-->
    </div> <!-- row end -->
   </div> <!-- blog-container end -->

  </div> <!-- container end -->
  <footer>
    <% include ../partials/footer %>
  </footer>
 </body>
</html>
