<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/header %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container blog blog-edit">
   <% include ./partials/pheader %>

   <div class="buttons">
    <a class="btn btn-default" href="/blogs">Back</a>
   </div>

   <form class="blog-form form-horizontal" action="/blogs/<%= blog._id %>?_method=put" method="blog">
    <div class="contentBox">
     <h3 class="contentBoxTop">Edit Blog</h3>
     <fieldset>
      <div class="form-group">
       <label for="title" class="col-sm-2 control-label">Title</label>
       <div class="col-sm-10">
        <input class="form-control" type="text" id="title" name="title" value="<%= blog.title %>">
       </div>
      </div>
      <div class="form-group">
       <label for="body" class="col-sm-2 control-label">Body</label>
       <div class="col-sm-10">
        <textarea class="form-control" id="body" name="body" rows="5"><%= blog.body %></textarea>
       </div>
      </div>
     </fieldset>
    </div>
    <div class="buttons">
     <button type="submit" class="btn btn-default">Submit</button>
    </div>
   </form>

  </div> <!-- container end -->

  <footer>
    <% include ../partials/footer %>
  </footer>
 </body>
</html>
