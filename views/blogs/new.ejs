<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/header %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container blog blog-new">
   <% include ./partials/pheader %>

   <div class="buttons">
    <a class="btn btn-default" href="/blogs">Back</a>
   </div>

   <form class="blog-form form-horizontal" action="/blogs" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop">New Blog</h3>
     <fieldset>

      <div class="form-group">
       <label for="title" class="col-sm-2 control-label">Title</label>
       <div class="col-sm-10">
        <input class="form-control" type="text" name="title" placeholder="title" value="">
       </div>
      </div>

      <div class="form-group">
       <label for="body" class="col-sm-2 control-label">Body</label>
       <div class="col-sm-10">
        <textarea class="form-control" name="body" rows="5"></textarea>
       </div>
     </div>

       <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
         <input class="form-control" type="text" name="image" placeholder="image" value="">
        </div>
       </div>

     </fieldset>
    </div>
    <div class="buttons">
     <button type="submit" class="btn btn-default">Submit</button>
    </div>
   </form>

  </div> <!-- container end -->
  <footer>
    <% include ../partials/footer %>
  </footer>
 </body>
</html>
