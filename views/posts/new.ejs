<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header %>
  </head>
  <body class="posts_index">
    <% include ../partials/nav %>

  <div class="container post">
    <% include ./partials/pheader %>

  <div class="buttons">
    <a class="btn btn-default" href="/posts">Back to the List</a>
  </div>

  <form class="post-form form-horizontal" action="/posts" method="post">

  <div class="contentBox">
   <h2 class="post_ne">New Post</h2>

   <fieldset class="post_ne_body">

    <div class="form-group">
     <label for="title" class="col-sm-2 control-label">Title</label>
     <div class="col-sm-10">
      <input class="form-control" type="text" placeholder="title" name="title" value="">
     </div>
    </div>

    <div class="form-group">
     <label for="body" class="col-sm-2 control-label">Body</label>
     <div class="col-sm-10">
      <textarea class="form-control" placeholder="waiting for you to start writing" name="body" rows="5"></textarea>
     </div>
    </div>

    </fieldset>

    </div>

    <div class="buttons">
     <button type="submit" class="btn btn-default">Submit</button>
    </div>
    </form>

    </div> <!-- container end -->

  </body>
</html>
