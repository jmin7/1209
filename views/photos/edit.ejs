<!DOCTYPE html>
<html>
  <head>
      <% include ../partials/header %>
  </head>

  <body class="photos_index">
      <% include ../partials/nav %>

    <div class="container photo">
      <% include ./partials/pheader %>

    <div class="buttons">
     <a class="btn btn-default" href="/blogs">Back to the List</a>
    </div>

    <form class="photo-form form-horizontal"
    action="/blogs/<%= blog._id %>?_method=put" method="post">

    <div class="contentBox">
      <h2 class="contentBoxTop">Edit Photo</23>

      <fieldset class="photo_edit_body">

      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
        <input class="form-control" type="text" name="title" value="<%= blog.title %>">
        </div>
      </div>

      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
         <input class="form-control" type="text" name="image" value="<%= blog.image %>">
        </div>
      </div>

      <div class="form-group">
        <label for="body" class="col-sm-2 control-label">Body</label>
        <div class="col-sm-10">
        <textarea class="form-control" name="body" rows="5"><%= blog.body %>
        </textarea>
        </div>
      </div>

    </fieldset>
    </div> <!-- content box -->

    <div class="buttons">
    <button type="submit" class="btn btn-default photo_submit">Submit</button>
    </div>
    </form>

    </div> <!-- container photo -->

  </body>
  </html>
