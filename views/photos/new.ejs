<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header %>
</head>

<body class="photos_index">
  <% include ../partials/nav %>

    <div class="container photo">
      <% include ./partials/pheader %>

      <div class="buttons">
          <a class="btn btn-default" href="/blogs">Back to the List</a>
      </div>

        <form class="photo-form form-horizontal" action="/blogs" method="post">
          <div class="contentBox">
              <h2 class="contentBoxTop">New Photo</h2>

              <fieldset class="photo_new_body">
                  <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="text" name="title" placeholder="title" value="">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="text" name="image" placeholder="image" value="">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="body" class="col-sm-2 control-label">Body</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" name="body" rows="5" value="Waiting for you to write.."></textarea>
                    </div>
                  </div>
                </fieldset>
            </div>

            <div class="buttons">
              <button type="submit" class="btn btn-default photo_submit">Submit</button>
            </div>
        </form>
    </div>

</body>

</html>
