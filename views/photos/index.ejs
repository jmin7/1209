<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header %>
</head>

<body class="photos_index">
    <% include ../partials/nav %>

        <div class="container photo">
            <% include ./partials/pheader ï»¿%>

                <div class="buttons">
                  <% if (currentUser) { %>
                    <a class="btn btn-primary btn-lg" href="/blogs/new">Add new photo</a>
                  <% } %>
                </div>

                <div class="container">
                    <div class="row">

                        <% blogs.forEach(function(blog) { %>
                            <div class="col-md-6 photo_index_pic">
                                <a href="/blogs/<%= blog._id %>">
                                    <div class="photo_index_title">
                                        <%= blog.title %>
                                    </div>
                                </a>
                                <div class="photo_index_time">
                                    <%= blog.createdAt %>
                                </div>
                                <div class="blog-image"><img class="thumbnail pic" src=<%=blog.image %> ></div>
                            </div>
                            <% }) %>

                    </div>

                </div>

</body>

</html>
