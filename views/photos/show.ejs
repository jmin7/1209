<!DOCTYPE html>
<html>
  <head>
      <% include ../partials/header %>
  </head>

  <body class="photos_index">
      <% include ../partials/nav %>

          <div class="container photo">
              <% include ./partials/pheader %>

              <div class="buttons">
                  <a class="btn btn-default" href="/blogs">Back to the List</a>
                  <% if (currentUser) { %>
                  <a class="btn btn-default" href="/blogs/<%= blog._id %>/edit">Edit</a>
                  <form action="/blogs/<%= blog._id %>?_method=delete" method="post">
                      <a class="btn btn-default" href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
                  </form>
                  <% } %>

              </div>

              <section>
                  <div class="photo_title">
                      <%= blog.title %>
                  </div>
                  <div><img class="photo_show_pic" src=<%=blog.image %>></div>
                  <div class="photo_info">
                      <div><span>Created</span> :
                          <%= blog.createdAt %>
                      </div>
                      <% if(blog.updatedAt) { %>
                          <div><span>Updated</span> :
                              <%= blog.updatedAt %>
                          </div>
                          <% } %>
                  </div>
                  <div class="photo_body">
                      <%= blog.body %>
                  </div>
              </section>
    </body>
</html>
