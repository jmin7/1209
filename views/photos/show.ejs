<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/header %>
 </head>

 <body class="photos_index">
    <% include ../partials/nav %>

  <div class="container photo">
     <% include ./partials/pheader %>

   <div class="buttons">
    <a class="btn btn-default" href="/blogs">Back to the List</a>
    <a class="btn btn-default" href="/blogs/<%= blog._id %>/edit">Edit</a>
    <form action="/blogs/<%= blog._id %>?_method=delete" method="post">
     <a class="btn btn-default" href="#"
     onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
    </form>
   </div>

   <div>
    <div class="photo_title"><%= blog.title %></div>

    <div><img class="photo_show_pic" src=<%= blog.image %>></div>
    <div class="photo_info">
    <div><span>Created</span> : <%= blog.createdAt %></div>
       <% if(blog.updatedAt) { %>
    <div><span>Updated</span> : <%= blog.updatedAt %></div>
       <% } %>
    </div> <!-- photo_info end -->

    <div class="photo_body"><%= blog.body %></div>
  </div>

    <!-- commentbox -->
    <div id="HCB_comment_box"><a href="http://www.htmlcommentbox.com">Widget</a> is loading comments...</div>
    <link rel="stylesheet" type="text/css" href="//www.htmlcommentbox.com/static/skins/bootstrap/twitter-bootstrap.css?v=0" />
